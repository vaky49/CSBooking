<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:id="@+id/rootLayout"
    tools:context="com.example.CSBooking.DriverLoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="C H A R"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="36sp" />
    </LinearLayout>


    <TextView

        android:id="@+id/txt_booking_app"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textAlignment="center"
        android:textColor="@color/bottomText"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_booking_app"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="297dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button


            android:id="@+id/driver"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"

            android:layout_weight="2"
            android:background="@drawable/btn_sign_in_background"
            android:text="Book a Charging Point"
            android:textColor="@android:color/white" />


    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_booking_app"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/customer"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:layout_weight="2"
            android:background="@drawable/btn_register_background"
            android:text="Offer a Charging Point"
            android:textColor="@color/btnRegister" />


    </LinearLayout>
</RelativeLayout>